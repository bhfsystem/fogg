#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"
  source normalize

  while [[ "$(pwd)" != "/" ]]; do
    if [[ -d .terraform ]]; then
      break
    fi
    cd ..
  done

  eval $(fogg env)
  exec vagrant "$@"
}

source sub "$BASH_SOURCE" "$@"
